# ========================
# Flask Configuration
# ========================

FLASK_APP=run.py                  # Arquivo principal da aplicação Flask
FLASK_ENV=development             # Ambiente de execução: development, production, etc.
FLASK_DEBUG=1                     # Ativa modo debug (1 = ativo, 0 = desativado)
SECRET_KEY=your-secret-key        # Chave secreta usada para sessões e segurança do Flask

# ========================
# JWT Configuration
# ========================

JWT_SECRET_KEY=your-jwt-secret    # Chave usada para assinar tokens JWT
JWT_ACCESS_TOKEN_EXPIRES=900      # Tempo de expiração do token em segundos (ex: 900 = 15 min)

# ========================
# App Settings
# ========================

APP_HOST=0.0.0.0                  # Host onde a aplicação será executada
APP_PORT=5000                    # Porta da aplicação Flask
TZ=America/Sao_Paulo             # Fuso horário da aplicação

# ========================
# MySQL Database
# ========================

MYSQL_HOST=localhost              # Host do banco de dados MySQL
MYSQL_PORT=3306                   # Porta padrão do MySQL
MYSQL_DATABASE=your_database      # Nome do banco de dados
MYSQL_USER=your_db_user           # Usuário do banco de dados
MYSQL_PASSWORD=your_db_password   # Senha do usuário do banco
MYSQL_ROOT_PASSWORD=your_root_pw  # Senha do usuário root (geralmente usado no Docker)

# ========================
# SQLAlchemy Settings
# ========================

SQLALCHEMY_DATABASE_URI=mysql+pymysql://your_db_user:your_db_password@localhost:3306/your_database?charset=utf8mb4
SQLALCHEMY_TRACK_MODIFICATIONS=False  # Desativa rastreamento de modificações (melhora performance)
